{
  "license": "Apache-2.0",
  "homepage": "https://www.inspatiallabs.com",
  "repository": "https://github.com/InSpatial-Labs/inspatial-core",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/InSpatial-Labs/inspatial-core/issues",
  "description": "InSpatial Core",
  "workspace": [
    "./apps/*",
    "./apps/templates/*",
    "./apps/extensions/*",
    "./packages/*",
    "./packages/core/*",
    "./packages/core/dev/*",
    "./packages/core/dev/cli/*",
    "./packages/core/dev/kit/*",
    "./packages/core/dev/kit/react/*",
    "./packages/core/dev/kit/inspatial/*",
    "./packages/core/dev/xr/*",
    "./packages/core/dev/run/*",
    "./packages/core/dev/renderer/*",
    "./packages/core/dev/spatial/*",
    "./packages/core/dev/theme/*",
    "./packages/core/dev/interact/*",
    "./packages/core/dev/motion/*",
    "./packages/core/dev/util/*",
    "./packages/core/dev/icon/*",
    "./packages/core/dev/dnd/*",
    "./packages/core/dev/node/*",
    "./packages/core/dev/a11y/*",
    "./packages/core/dev/i18n/*",
    "./packages/core/cloud/*",
    "./packages/core/cloud/kv/*",
    "./packages/core/cloud/infetch/*",
    "./packages/core/cloud/cms/*",
    "./packages/core/cloud/db/*",
    "./packages/core/cloud/orm/*",
    "./packages/core/cloud/auth/*",
    "./packages/core/cloud/vault/*",
    "./packages/core/cloud/ratelimit/*",
    "./packages/core/cloud/analytics/*",
    "./packages/core/cloud/deploy/*",
    "./packages/utilities/*",
    "./packages/utilities/hooks/*",
    "./packages/utilities/props/*",
    "./packages/utilities/raymarcher/*"
  ],
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs",
    "sloppy-imports"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  },
  "imports": {
    "@inspatial/theme": "jsr:@inspatial/theme@^0.1.2"
  }
}
