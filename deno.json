{
  "license": "Intentional-License-1.0",
  "homepage": "https://www.inspatiallabs.com",
  "repository": "https://github.com/inspatiallabs/inspatial-dev",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/inspatiallabs/inspatial-dev/issues",
  "description": "InSpatial Dev",
  "workspace": [
    "./apps/*",
    "./apps/templates/*",
    "./apps/extensions/*",
    "./packages/*",

    "./packages/dev/*",
    "./packages/dev/cli/*",
    "./packages/dev/kit/*",
    "./packages/interact/*",
    "./packages/dev/run/*",
    "./packages/dev/renderer/*",
    "./packages/dev/spatial/*",
    "./packages/dev/theme/*",
    "./packages/dev/interact/*",
    "./packages/dev/motion/*",
    "./packages/dev/util/*",
    "./packages/dev/icon/*",
    "./packages/dev/dnd/*",
    "./packages/dev/node/*",
    "./packages/dev/a11y/*",
    "./packages/dev/i18n/*"
  ],
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs"   
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
