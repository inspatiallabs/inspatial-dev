{
  "name": "@inspatial/kit-rct",
  "version": "0.0.6",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:react@^19.0.0",
    "jsxImportSourceTypes": "npm:@types/react@^19.0.0",
    "allowJs": true,
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable", "esnext"]
  },
  "imports": {
    "motion": "npm:motion@^11.13.1",
    "@inspatial/theme": "jsr:@inspatial/theme@^0.1.0",
    "@inspatial/type": "jsr:@inspatial/type@^0.1.3",
    "@inspatial/util": "jsr:@inspatial/utils@^0.1.7",
    "prop-types": "npm:prop-types@^15.8.1",
    "@types/prop-types": "npm:@types/prop-types@^15.7.14",
    "react": "npm:react@^19.0.0",
    "@types/react": "npm:@types/react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "react-router": "npm:react-router@^7.5.0"
  },
  "exports": {
    ".": "./src/index.ts",

    "./structure": "./src/structure/index.ts",
    "./structure/marquee": "./src/structure/marquee/index.tsx",

    "./typography": "./src/typography/index.ts",
    "./typography/text": "./src/typography/text/text.dom.tsx"
  },
  "tasks": {
    "publish": "deno publish --no-check --allow-slow-types",
    "dev": "deno run --watch --allow-read --allow-write --allow-net --allow-env src/index.ts"
  }
}
