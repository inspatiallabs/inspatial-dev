{
  "name": "@inspatial/motion",
  "version": "0.1.0",
  "description": "Universal Motion Module",
  "author": "InSpatial Labs <in@spatiallabs.email>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inspatiallabs/inspatial-core.git",
    "directory": "packages/core/dev/motion"
  },
  "bugs": {
    "url": "https://github.com/inspatiallabs/inspatial-core/issues"
  },
  "homepage": "https://inspatial.dev/motion",
  "files": ["src"],
  "keywords": [
    "animation",
    "motion",
    "interpolation",
    "tween",
    "timeline",
    "inspatial",
    "physics",
    "spring",
    "easing",
    "animation-library",
    "animation-engine",
    "tweening",
    "transitions",
    "keyframes"
  ],

  "imports": {
    "@inspatial/test": "../test/src/index.ts"
  },
  "exports": {},
  "tasks": {
    "build": "deno bundle --config deno.json src/index.ts dist/index.js",
    "test": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts",
    "test:leaks": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/leaks.test.ts",
    "test:animation": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/animation.test.ts",
    "test:callbacks": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/callback.test.ts",
    "test:draggable": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/draggable.test.ts",
    "test:eases": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/eases.test.ts",
    "test:keyframes": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/keyframes.test.ts",
    "test:promises": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/promises.test.ts",
    "test:sequences": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/sequence.test.ts",
    "test:svg": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/svg.test.ts",
    "test:timer": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/timer.test.ts",
    "test:units": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/units.test.ts",
    "test:utils": "deno run -A --no-check --unstable-sloppy-imports ./test_runner.ts ./src/utils.test.ts"
  },
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "checkJs": false,
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "dom", "dom.iterable"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    }
  },
  "fmt": {
    "include": ["src/"]
  }
}
