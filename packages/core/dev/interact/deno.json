  },
  "exports": {
    ".": "./index.ts",
    "./state": "./state/index.ts",
    "./signal-core": "./signal-core/index.ts",
    "./signal-lite": "./signal-lite/signal-lite.ts",
    "./signal-trigger": "./signal-trigger/index.ts",
    "./trigger": "./trigger/src/index.ts"
  },
  "compilerOptions": {
    "checkJs": false,
